{
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.ico"
    },
    "bundle": {
      "identifier": "com.cheesegrinder.blob-downloader",
      "externalBin": [
        "bin/ffmpeg"
      ],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.ico"
      ],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "allowlist": {
      "shell": {
        "sidecar": true,
        "scope": [
          { "name": "bin/ffmpeg", "sidecar": true }
        ]
      }
    }
  }
}