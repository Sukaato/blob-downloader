{
  "package": {
    "productName": "blob-downloader",
    "version": "0.3.0"
  },
  "build": {
    "distDir": "../www",
    "devPath": "http://localhost:3333/",
    "beforeDevCommand": "npm start",
    "beforeBuildCommand": "npm run build",
    "withGlobalTauri": true
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.ico"
    },
    "bundle": {
      "active": true,
      "targets": "msi",
      "identifier": "blob-downloader",
      "resources": [],
      "externalBin": [
        "bin/ffmpeg"
      ],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.ico"
      ],
      "copyright": "",
      "category": "DeveloperTool",
      "shortDescription": "",
      "longDescription": "",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "updater": {
      "active": false
    },
    "allowlist": {
      "path": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": [
          "$APP/*",
          "$DOWNLOAD/*"
        ]
      },
      "window": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "shell": {
        "all": true,
        "scope": [
          { "name": "bin/ffmpeg", "sidecar": true }
        ]
      }
    },
    "windows": [
      {
        "label": "main",
        "title": "blob-downloader",
        "width": 1200,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  }
}
